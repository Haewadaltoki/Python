hap = 0
a,b=0,0

while True :
    a= input("더할 첫번째 수를 입력하세요 : ")
    if a== '$' :
        break
    elif a == '0':
        break
    b = input("더할 두번쨰 수를 입력하세요 : ")
    if b == '$' :
        break
    elif b == '0':
        break
    a=int(a)
    b=int(b)
    hap = a+b
    print("%d +%d = %d" % (a,b,hap))

print("$또는0을 입력해 반복문을 탈출함:")
